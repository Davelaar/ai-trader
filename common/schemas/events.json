{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI-Trader Events v1",
  "type": "object",
  "oneOf": [
    {
      "properties": {
        "type": { "const": "mini_ticker" },
        "ts": { "type": "integer" },
        "symbol": { "type": "string" },
        "price": { "type": "number" },
        "volume": { "type": "number" },
        "raw": { "type": "object" }
      },
      "required": ["type", "ts", "symbol", "price"]
    }
  ]
}
